<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android">
    <data>
    </data>

    <!-- Layout da tela -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/persistencia_txt_json"
                    android:layout_width="match_parent"
                    android:layout_margin="@dimen/spacing_normal"
                    android:layout_height="wrap_content"/>

                <Button
                    android:id="@+id/persistencia_btn_1"
                    android:text="Carrega perfil 1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

                <Button
                    android:id="@+id/persistencia_btn_2"
                    android:text="Carrega perfil 2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>



            </LinearLayout>

        </ScrollView>

    </RelativeLayout>

</layout>


