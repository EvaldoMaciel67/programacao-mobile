<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android">

    <data/>

    <!-- Layout da tela -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <Button
            android:id="@+id/troca_btn_fragmento1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Carrega Fragmento 1"/>

        <Button
            android:id="@+id/troca_btn_fragmento2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Carrega Fragmento 2"/>

        <TextView
            android:id="@+id/troca_txt_titulo"
            android:layout_margin="@dimen/spacing_normal"
            android:text="..."
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <!-- Define um layout fake para ter o conteudo substituido -->
        <FrameLayout
            android:id="@+id/troca_fragment_container"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>




    </LinearLayout>

</layout>


